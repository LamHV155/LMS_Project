@model List<DAL.StudentView.SubmitAssessmentView>
@{
    ViewBag.Title = "GetSubmitDetailsByStudentAndEvent";
    Layout = "~/Areas/Student/Views/Shared/_BlankStudentLayout.cshtml";
}

<h1>@Model[0].courseName</h1>
<h5>link<</h5>
<h2>@Model[0].topicTitle</h2>
<h3>@Model[0].eventTitle</h3>
<a>@Model[0].eventDescription</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Status</th>
            <th scope="col">Dealine</th>
            <th scope="col">submitTime</th>
            <th scope="col">Comment by Teacher</th>
            <th scope="col">Score</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            @if (Model[0].submitID == null)
            {
                <td>Chưa nộp</td>
            }
            else
            {
                <td>Đã nộp</td>
            }
            <td>@Model[0].eventDeadline</td>
            @if (Model[0].submitID == null)
            {
                <td></td>
            }
            else
            {
                <td>@Model[0].submitTime</td>
            }
            @if (Model[0].assComment == null)
            {
                <td></td>
            }
            else
            {
                <td>@Model[0].assComment</td>
            }
            @if (Model[0].assScore == 0)
            {
                <td></td>
            }
            else
            {
                <td>@Model[0].assScore</td>
            }
        </tr>
    </tbody>
</table>
<div class="container">
    <div class="row">
        @if (Model[0].submitID == null)
        {
            <div class="col-12 col-sm-6 col-md-6">
                <form>
                    <button class="btn btn-primary btn-lg" type="submit" formaction="1klasse.html">Nộp bài</button>
                </form>
            </div>
        }
        else
        {
            <div class="col-12 col-sm-6 col-md-6">
            <form>
                <button class="btn btn-primary btn-lg" type="submit" formaction="1klasse.html">Sửa bài</button>
            </form>
        </div>
        <div class="col-12 col-sm-6 col-md-6">
            <form>
                <button class="btn btn-primary btn-lg" type="submit" formaction="1klasse.html">Hủy bài nộp</button>
            </form>
        </div>
        }
        
    </div>
</div>

