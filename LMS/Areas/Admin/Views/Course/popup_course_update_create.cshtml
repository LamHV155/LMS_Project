<div class="modal fade" id="CourseUpdateDetail">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title"></h3>
            </div>

            <div class="modal-body">
                <form role="form" id="frmSaveData-Course">
                    <div class="form-horizontal">

                        <div class="form-group">
                            <label for="nameCourse">Học phần</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" id="namecourse" />
                                <input type="hidden" id="IDcourse" value="null" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="description">Mô tả học phần:</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" id="description" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="op1">Học kỳ:</label>
                            <div class="col-md-10">
