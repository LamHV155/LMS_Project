                                <select id="teachername" class="dropdown-header">
                                </select>
                                <input type="hidden" class="form-control" id="IDteacher" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-success" id="btnSave-Course">Confirm</button>
            </div>
        </div>
    </div>
</div>