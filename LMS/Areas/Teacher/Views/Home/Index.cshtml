@model List<DAL.EF.SUBJECT>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Teacher/Views/Shared/_BlankTeacherLayout.cshtml";
}

<div class="d-flex flex-column mr-4">
    @foreach (var sub in Model)
    {
        <a href="/Teacher/Subject/Index?id=@sub.ID" class="btn">
            <div class="card div-hover">
                <div class="card-body d-flex flex-row p-0">
                    <img src="~/Content/Teacher/Image/course-banner.jpg" alt="subject" style="width:11rem; height:8rem" />
                    <div class="align-self-center pl-3">
                        <h5 class="card-title">@sub.NAME</h5>
                        <p class="card-text">@sub.DESCRIPTION</p>
                    </div>
                </div>
            </div>
        </a>
    }
</div>


